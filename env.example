# ============================================
# APLICAÇÃO - CONFIGURAÇÕES BÁSICAS
# ============================================
APP_NAME="E-commerce Backend"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=America/Sao_Paulo

# ============================================
# BANCO DE DADOS - MYSQL
# ============================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ecommerce_db
DB_USERNAME=root
DB_PASSWORD=

# ============================================
# CACHE & SESSÃO
# ============================================
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120
QUEUE_CONNECTION=sync

# ============================================
# REDIS (OPCIONAL - PARA CACHE/FILAS)
# ============================================
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ============================================
# EMAIL - CONFIGURAÇÕES DE ENVIO
# ============================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@ecommerce.com"
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# AUTENTICAÇÃO - JWT/SANCTUM
# ============================================
JWT_SECRET=
JWT_EXPIRE=60
JWT_REFRESH_EXPIRE=20160

SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1

# ============================================
# PAGAMENTOS - GATEWAYS
# ============================================
MERCADOPAGO_ACCESS_TOKEN=
MERCADOPAGO_PUBLIC_KEY=
MERCADOPAGO_WEBHOOK_SECRET=

STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ============================================
# ARMAZENAMENTO - FILESYSTEM
# ============================================
FILESYSTEM_DISK=local
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# ============================================
# SERVIÇOS EXTERNOS - APIs
# ============================================
VIA_CEP_URL=https://viacep.com.br/ws/

CORREIOS_CEP_URL=http://ws.correios.com.br/
CORREIOS_EMPresa=
CORREIOS_SENHA=

GOOGLE_MAPS_API_KEY=

# ============================================
# SEGURANÇA - RATE LIMITING
# ============================================
THROTTLE_ENABLED=true
THROTTLE_REQUESTS=60
THROTTLE_EXPIRES=1

# ============================================
# FRONTEND - URLs
# ============================================
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# ============================================
# FEATURES - CONFIGURAÇÕES DO E-COMMERCE
# ============================================
ECOMMERCE_CURRENCY=BRL
ECOMMERCE_CURRENCY_SYMBOL=R$
ECOMMERCE_TAX_PERCENTAGE=10
ECOMMERCE_SHIPPING_FREE_AMOUNT=199.00
ECOMMERCE_MIN_ORDER_AMOUNT=10.00
ECOMMERCE_MAX_PRODUCTS_PER_ORDER=20

# ============================================
# NOTIFICAÇÕES
# ============================================
FCM_SERVER_KEY=

# ============================================
# LOGS & MONITORAMENTO
# ============================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# ============================================
# DESENVOLVIMENTO - DEBUG
# ============================================
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=true
